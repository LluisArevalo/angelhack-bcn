<style>

  .actions-container{
    overflow: hidden;
    background-color: white;
  }
  .actions-container:first-child + article{
    margin-top: 30px;
  }
  .actions-container:first-child{
    margin-top: 10px;
  }
  .action-container{
    width: 40%;
    margin-left: 5%;
    margin-right: 5%;
    margin-bottom: 20px;
    float: left;
    -moz-box-shadow:    0 3px 5px 3px rgba(0,0,0,0.30);
    -webkit-box-shadow: 0 3px 5px 3px rgba(0,0,0,0.30);
    box-shadow:         0 3px 5px 3px rgba(0,0,0,0.30);
    -webkit-transition: all 3s ease-out;
    -moz-transition: all 0.3s ease-out;
    -o-transition: all 0.3s ease-out;
    transition: box-shadow 0.3s ease-out;
  }

  .action-container:hover{
    -moz-box-shadow:    0 3px 35px 3px rgba(0,0,0,0.30);
    -webkit-box-shadow: 0 3px 35px 3px rgba(0,0,0,0.30);
    box-shadow:         0 3px 35px 3px rgba(0,0,0,0.30);
    -webkit-transition: all 3s ease-in;
    -moz-transition: all 0.3s ease-in;
    -o-transition: all 0.3s ease-in;
    transition: box-shadow 0.3s ease-in;
  }

  .action-ctr-thumbnail {
    background: black;
    height: 300px;
    width: 100%;
  }
  img {
      display: block;
      width: 100%;
      height: 100%;

    }
  .action-ctr-content {
    bottom: 0;
    background: white;
    width: 100%;
    height: 100%;
    min-height: 150px;
    padding-top: 20px;
  }

  .action-ctr-content>span{
    margin: 20px;
  }
  .action-ctr-content>h4 {
      margin: 0;
      margin-left: 20px;
      padding: 0 0 10px;
      color: red;
      font-size: 26px;
      font-weight: 700;
    }
    .action-ctr-content>p {
      margin-left: 20px;
      margin-right: 20px;
      margin-bottom: 20px;
      margin-top: 0;
      color: grey;
      font-size: 14px;
      line-height: 1.8em;
    }

</style>
<header>
  Header
</header>
<section class="actions-container">

<% @actions.each do |action| %>
      <article class="action-container">
        <div class="action-ctr-thumbnail">
          <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/photo-1429043794791-eb8f26f44081.jpeg">
        </div>
        <div class="action-ctr-content">
          <span>CATEGORIA</span>
          <h4><%= action.title %></h4>
          <p><%= action.content %></p>
          <div>

            <span class=""></span>
          </div>
        </div>
      </article>
  <% end %>
</section>
<footer>
  Footer
</footer>
