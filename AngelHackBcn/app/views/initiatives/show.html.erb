<section id="initiative-information" class="initiative">
  <article>
    <h2><%= @initiative.title %></h2>
    <%= image_tag(@initiative.image.url) if @initiative.has_image? %>
    
    <div class="content"><%= @initiative.content %></div>
    <div class="js-priority-tabs">
      <div data-priority-id="1">High</div>
      <div data-priority-id="2">Medium</div>
      <div data-priority-id="3">Low</div>
    </div>
    <div class="js-priority-tabs">
      <div data-status="yes">Done</div>
      <div data-status="no">Undone</div>
    </div>
  </article>
</section>

<input id="js-user-id" type="hidden" value="<%= @user_id %>">
<input id="js-initiative-id" type="hidden" value="<%= @initiative.id %>">