<%= render "layouts/header" %>
<section class="initiatives-container">

  <% @initiatives.each do |initiative| %>
      <article class="initiative-container">
        <a href="/initiatives/<%= initiative.id %>">
          <div class="initiative-ctr-thumbnail">
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/photo-1429043794791-eb8f26f44081.jpeg">
          </div>
          <div class="initiative-ctr-content">
            <span class="topic"><%= initiative.topic.description %></span>
            <h4><%= initiative.title %></h4>
            <p><%= initiative.content %></p>
            <% if initiative.done? == [] %>
              <div class="initiative-info grey">
                <span class="fa fa-question fa-2x"></span>
              </div>
            <% elsif initiative.done? %>
              <div class="initiative-info green">
                <span class="fa fa-check fa-2x"></span>
              </div>
            <% else %>
              <div class="initiative-info red">
                <span class="fa fa-remove fa-2x"></span>
              </div>
            <% end %>

            <article class="footer-ctr">
              <% initiative.get_citizens_priority.each do |priority_id| %>
                <div data-id="<%= priority_id %>" class="general-priority  "><div  class="border-green"><%= Priority.find(priority_id).level %></div></div>
              <% end %>
              <div class="area"><div><%= initiative.region.area %></div></div>
            </article>
          </div>
        </a>
      </article>
  <% end %>
</section>


